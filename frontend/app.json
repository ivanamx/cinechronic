{
  "expo": {
    "name": "CineChronic",
    "slug": "cinechronic",
    "version": "1.0.0",
    "scheme": "cinechronic",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1a3a2a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cinechronic.app",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsLocalNetworking": true,
          "NSExceptionDomains": {
            "192.168.0.10": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true,
              "NSExceptionRequiresForwardSecrecy": false
            },
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true,
              "NSExceptionRequiresForwardSecrecy": false
            },
            "192.168.0.0": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true,
              "NSExceptionRequiresForwardSecrecy": false
            }
          }
        },
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a3a2a"
      },
      "package": "com.cinechronic.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "updates": {
      "url": "https://u.expo.dev/849f2e17-178a-425a-9b19-b10bae9ef206",
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "extra": {
      "eas": {
        "projectId": "849f2e17-178a-425a-9b19-b10bae9ef206"
      },
      "ngrokUrl": "https://hot-paths-invite.loca.lt",
      "apiUrl": "https://your-production-api.com/api"
    },
    "_comment": "IMPORTANTE: Actualiza 'apiUrl' arriba con tu URL de producción real (ej: https://api.tudominio.com/api) antes de hacer el build de producción",
    "plugins": [
      "expo-font"
    ]
  }
}
